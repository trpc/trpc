{
  "extends": "./tsconfig.build.json",
  "include": [
    "packages",
    "types",
    "scripts",
    "examples",
    "rollup.config.ts",
    ".eslintrc.js",
    "vendor"
  ],
  "exclude": [],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    // "typeRoots": [
    //   "./types",
    //   "./node_modules/@types",
    //   "../../node_modules/@types"
    // ],
    "paths": {
      "@trpc/server": ["packages/server/src"],
      "@trpc/server/*": ["packages/server/src/*"],
      "@trpc/client": ["packages/client/src"],
      "@trpc/client/*": ["packages/client/src/*"],
      "@trpc/react-query": ["packages/react-query/src"],
      "@trpc/react-query/*": ["packages/react-query/src/*"],
      "@trpc/next": ["packages/next/src"],
      "@trpc/next/*": ["packages/next/src/*"],
      "$test/*": ["test/*"]
    },
    "types": ["node", "vitest/globals"]
  }
}
